@model PharmacySystem.Models.Request.MedicineCreateRequest
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active">Form Elements</li>
                    </ol>
                </div>
                <h5 class="page-title">Form Elements</h5>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Textual inputs</h4>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-3 col-form-label">Medicine Group:</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="MGroup" name="txtMGroup" asp-for="IdMedicineGroup" asp-items="@(new SelectList(ViewBag.ListOfMedicineGroup,"IdMedicineGroup", "MedicineGroupName"))">
                                            <option value="0">Select...</option>
                                        </select>                                    
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-search-input" class="col-sm-3 col-form-label">Medicine Name:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="search" value="How do I shoot web" id="example-search-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label">Expired Date:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="email" value="bootstrap@example.com" id="example-email-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-url-input" class="col-sm-3 col-form-label">Supplier:</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="Supplier" name="txtSupplier" asp-for="IdSupplier" asp-items="@(new SelectList(ViewBag.ListOfSupplier,"IdSupplier", "SupplierName"))">
                                            <option value="0">Select...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group row">
                                    <label for="example-password-input" class="col-sm-3 col-form-label">Quantity:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="password" value="hunter2" id="example-password-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-number-input" class="col-sm-3 col-form-label">Unit:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="number" value="42" id="example-number-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Import Price:</label>
                                    <div class="col-sm-9">
                                        <select class="form-control">
                                            <option>Select</option>
                                            <option>Large select</option>
                                            <option>Small select</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Sales Price:</label>
                                    <div class="col-sm-9">
                                        <select class="custom-select">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="col-form-label">Description: </label>
                                <div>
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
