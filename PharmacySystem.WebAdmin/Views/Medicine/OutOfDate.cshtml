@using PharmacySystem.Models.Common;
@model PagedResult<PharmacySystem.Models.ViewModels.MedicineVM>
<div class="page-content-wrapper ">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h5 class="page-title">Datatable</h5>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <form id="searchForm" asp-controller="Medicine" asp-action="OutOfDate" method="get">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label class="col-form-label">Medicine Name: </label>
                                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label class="col-form-label">Medicine Group: </label>
                                    <select name="IdMedicineGroup" asp-items="@ViewBag.ListOfMedicineGroup" class="form-control">
                                        <option>Select...</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="col-form-label">Supplier: </label>
                                    <select name="IdSupplier" asp-items="@ViewBag.ListOfSupplier" class="form-control">
                                        <option>Select...</option>
                                    </select>
                                </div>
                                <div class="col-md-2 m-t-33">
                                    <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <table id="datatablemedicine" class="table table-striped table-bordered dt-responsive nowrap m-t-10" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Group</th>
                                    <th>Supplier</th>
                                    <th>Expiry Date</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                    <th>Import Price</th>
                                    <th>Sell Price</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.MedicineName</td>
                                        <td>@item.MedicineGroupName</td>
                                        <td>@item.SupplierName</td>
                                        <td>@string.Format("{0:dd/MM/yyyy}", @item.ExpiryDate)</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Unit</td>
                                        <td>@item.ImportPrice</td>
                                        <td>@item.SellPrice</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a asp-controller="Medicine" asp-action="Edit" asp-route-id="@item.IdMedicine" class="details btn btn-primary waves-effect waves-light"><div><i class="fa fa-eye"></i></div></a>
                                            <a asp-controller="Medicine" asp-action="Delete" asp-route-id="@item.IdMedicine" class="btn btn-outline-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

        <div class="col-sm-6 col-md-3 m-t-30">
            <!--  Modal content for the above example -->
            <div id="partialModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
                <div class="modal-dialog  modal-max">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mt-0">SELECT FILE NEED TO IMPORT:</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>



    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
<script src="~/js/medicine.js"></script>
<script src="~/js/medicine/list.js"></script>

