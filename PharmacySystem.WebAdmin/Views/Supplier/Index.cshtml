
@using PharmacySystem.Models.Common;
@model PagedResult<PharmacySystem.Models.ViewModels.SupplierVM>
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h5 class="page-title">Datatable</h5>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <form id="searchForm" asp-controller="Supplier" asp-action="Index" method="get">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label class="col-form-label">Supplier Name: </label>
                                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label class="col-form-label">Supplier Group: </label>
                                    <select name="IdSupplierGroup" asp-items="@ViewBag.ListOfSupplierGroup" class="form-control">
                                        <option>Select...</option>
                                    </select>
                                </div>
                                <div class="col-md-2 m-t-33">
                                    <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">
                                        <i class="fa fa-search"></i> Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Supplier Group</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.SupplierName</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.SupplierGroupName</td>
                                        <td>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light"><div><i class="fa fa-eye"></i></div></a>
                                            <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@item.IdSupplier" class="btn btn-outline-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
<script src="~/js/medicine.js"></script>
