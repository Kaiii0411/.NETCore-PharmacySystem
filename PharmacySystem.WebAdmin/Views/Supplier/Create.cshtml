@model PharmacySystem.Models.Request.SupplierCreateRequest
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active">Form Elements</li>
                    </ol>
                </div>
                <h5 class="page-title">Form Elements</h5>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row">
                            <form id="supplier-create" class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group row"> 
                                            <label for="SupplierName" class="col-sm-3 col-form-label">Supplier Name:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="SupplierName" id="SupplierName" class="form-control" type="text" id="example-search-input">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="SupplierGroup" class="col-sm-3 col-form-label">Supplier Group:</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" id="SupplierGroup" name="txtSupplier" asp-for="IdSupplierGroup" asp-items="@(new SelectList(ViewBag.ListOfSupplierGroup,"IdSupplierGroup", "SupplierGroupName"))">
                                                    <option value="0">Select...</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="Phone" class="col-sm-3 col-form-label">Phone:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="Phone" id="Phone" class="form-control" type="text">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="Email" class="col-sm-3 col-form-label">Email:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="Email" id="Email" class="form-control" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label for="Address" class="col-form-label">Address: </label>
                                        <div>
                                            <textarea asp-for="Address" id="Address" class="form-control" rows="5"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 m-t-10">
                                        <div class="form-group right">
                                            <div>
                                                <button id="btnSubmitCreateSupplier" type="button" class="btn btn-primary waves-effect waves-light">
                                                    Submit
                                                </button>
                                                <a asp-controller="Supplier" asp-action="Index" class="btn btn-secondary waves-effect m-l-5">
                                                    Cancel
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
<script src="~/js/supplier.js"></script>

