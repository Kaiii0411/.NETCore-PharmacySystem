@using PharmacySystem.Models.ViewModels
@model IInvoiceVM

<div class="page-content-wrapper ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h5 class="page-title">Datatable</h5>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-form-label">Supplier: </label>
                                <select id="idSupllier" name="IdSupplier" asp-items="@ViewBag.ListOfSupplier" class="form-control">
                                    <option>Select...</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="col-form-label">Medicine Name: </label>
                                <select id="idMedicine" name="IdMedicine" class="form-control" asp-items="@(new SelectList(string.Empty, "Value", "Text"))">
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="col-form-label">Quantity: </label>
                                <input type="number" id="Quantity" class="form-control" />
                            </div>
                            <div class="col-md-3 m-t-33">
                                <button type="submit" id="btnAddIInvoiceItems" class="btn btn-primary btn-lg waves-effect waves-light">
                                    <i class="fa fa-plus"></i> Add
                                </button>
                                <button type="submit" id="btnRefresh" class="btn btn-primary btn-lg waves-effect waves-light">
                                    <i class="fa fa-refresh"></i> Refresh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <table id="datatablecreateiinvoice" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Medicine Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>TotalPrice</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.IInvoiceItems)
                                {
                                    <tr>
                                        <td>@item.IMedicineName</td>
                                        <td>@item.IPrice</td>
                                        <td>
                                            <span id="regularQuantity">@item.IQuantity</span>
                                            <input id="newQuantity" style="display:none" type="number" value="@item.IQuantity"/>
                                        </td>
                                        <td>@(item.IPrice * item.IQuantity)</td>
                                        <td>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light" id="editButton" onclick="ShowUpdate()"><div><i class="fa fa-edit"></i></div></a>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light" id="updateButton" style="display:none" onclick="UpdateInvoice()"><div><i class="fa fa-check"></i></div></a>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light" id="cancelButton" style="display:none" onclick="CancelUpdate()"><div><i class="fa fa-times-circle"></i></div></a>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light" id="deleteButton" onclick="DeleteItemsInvoice()"><div><i class="fa fa-trash"></i></div></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-12 m-t-33">
                                <button type="submit" id="btnCreateIInvoice" class="btn btn-primary btn-lg waves-effect waves-light m-l-15 right">
                                    <i class="fa fa-paper-plane"></i> Confirm
                                </button>
                                <a id="btnBackToList" asp-controller="ImportInvoice" asp-action="Index" class="btn btn-secondary btn-lg waves-effect m-l-5 right">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/js/importinvoice/create.js"></script>

