@model PharmacySystem.Models.ViewModels.ImportInvoiceVM

<div class="page-content-wrapper ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active">Form Elements</li>
                    </ol>
                </div>
                <h5 class="page-title">Form Elements</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <div class="col-md-12">
                            <a asp-controller="ImportInvoice" asp-action="PrintReport" asp-route-id="@Model.IdImportInvoice" class="btn btn-primary btn-lg waves-effect waves-light right" target="_blank">
                                <i class="fa fa-file-pdf-o"></i> Print
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row">
                            <form id="medicine-create" class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="MedicineName" class="col-sm-3 col-form-label">Invoice Id:</label>
                                            <div class="col-sm-9">
                                                <input id="InvoiceId" class="form-control" type="text" value="@Model.IdImportInvoice" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="DateCheckIn" class="col-sm-3 col-form-label">Date Check In:</label>
                                            <div class="col-sm-9">
                                                <input id="DateCheckIn" class="form-control" type="date" value="@Model.DateCheckIn" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="DateCheckOut" class="col-sm-3 col-form-label">Date Check Out:</label>
                                            <div class="col-sm-9">
                                                <input id="DateCheckOut" class="form-control" type="date" value="@Model.DateCheckOut" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="UserName" class="col-sm-3 col-form-label">Created By:</label>
                                            <div class="col-sm-9">
                                                <input id="UserName" class="form-control" type="text" value="@Model.UserName" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="Supplier" class="col-sm-3 col-form-label">Supplier:</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" id="Supplier" name="txtSupplier" asp-items="@ViewBag.ListOfSupplier" disabled>
                                                    <option value="0">Select...</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="Status" class="col-sm-3 col-form-label">Status:</label>
                                            <div class="col-sm-9">
                                                <div style="background: @Model.StatusColor; color: @Model.StatusText;border-radius:10px;text-align:center;">
                                                    @Model.StatusName
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label for="Note" class="col-form-label">Note: </label>
                                        <div>
                                            <textarea  id="Note" class="form-control" rows="2" disabled>@Model.Note</textarea>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <table id="datatableinvoicedetails" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Medicine Name</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.invoiceDetails)
                                {
                                    <tr>
                                        <td>@item.MedicineName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div>
</div>