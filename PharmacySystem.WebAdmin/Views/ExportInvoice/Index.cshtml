@using PharmacySystem.Models.Common;
@model PagedResult<PharmacySystem.Models.ViewModels.ExportInvoiceVM>
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h5 class="page-title">Datatable</h5>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <form id="searchForm" asp-controller="ExportInvoice" asp-action="Index" method="get">
                            <div class="form-group row">
                                <div class="col-sm-2">
                                    <label for="example-text-input" class="col-form-label">Date Check In: </label>
                                    <input class="form-control datepicker" type="date" placeholder="Date Check In" name="DateCheckIn">
                                </div>
                                <div class="col-sm-2">
                                    <label for="example-text-input" class="col-form-label">Date Check Out: </label>
                                    <input class="form-control datepicker" type="date" placeholder="Date Check Out" name="DateCheckOut">
                                </div>
                                <div class="col-md-2 m-t-33">
                                    <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date Check In</th>
                                    <th>Date Check Out</th>
                                    <th>Status</th>
                                    <th>User</th>
                                    <th>Note</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.IdExportInvoice</td>
                                        <td>@string.Format("{0:dd/MM/yyyy}", @item.DateCheckIn)</td>
                                        <td>@string.Format("{0:dd/MM/yyyy}", @item.DateCheckOut)</td>
                                        <td>@item.StatusName</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Note</td>
                                        <td>
                                            <a asp-controller="ExportInvoice" asp-action="Details" asp-route-id="@item.IdExportInvoice" class="details btn btn-primary waves-effect waves-light"><div><i class="fa fa-eye"></i></div></a>
                                            <a asp-controller="Medicine" asp-action="Delete" asp-route-id="@item.IdExportInvoice" class="btn btn-outline-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->