@model PharmacySystem.Models.Request.UserUpdateRequest
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active">Form Elements</li>
                    </ol>
                </div>
                <h5 class="page-title">Form Elements</h5>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row">
                            <form id="users-create" class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="Users" class="col-sm-3 col-form-label">Users Id:</label>
                                            <div class="col-sm-9">
                                                <input value="@Model.Id" id="Users" class="form-control" type="text" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="IdStaff" class="col-sm-3 col-form-label">Staff:</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" id="IdStaff" asp-for="IdStaff" asp-items="@ViewBag.ListOfStaff" disabled>
                                                    <option>Select...</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="IdAccount" class="col-sm-3 col-form-label">Account</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" id="IdAccount" asp-for="IdAccount" asp-items="@ViewBag.ListAccount" disabled>
                                                    <option>Select...</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 m-t-10">
                                        <div class="form-group right">
                                            <div>
                                                <button id="btnUpdateUsers" type="button" class="btn btn-primary waves-effect waves-light" onclick="EnableUpdate()">
                                                    Update
                                                </button>
                                                <button id="btnConfirmUpdateUsers" type="button" class="btn btn-primary waves-effect waves-light" style="display:none">
                                                    Confirm
                                                </button>
                                                <button id="btnCancelUpdateUsers" type="button" class="btn btn-primary waves-effect waves-light" style="display:none" onclick="DisableUpdate()">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>  
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
<script src="~/js/users.js"></script>

