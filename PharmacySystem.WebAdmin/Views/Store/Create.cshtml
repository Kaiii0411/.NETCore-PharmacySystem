@model PharmacySystem.Models.Request.StoreCreateRequest
<div class="page-content-wrapper ">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active">Form Elements</li>
                    </ol>
                </div>
                <h5 class="page-title">Form Elements</h5>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row">
                            <form id="store-create" class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="StoreName" class="col-sm-3 col-form-label">Store Name:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="StoreName" id="StoreName" class="form-control" type="text" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group row">
                                            <label for="Owner" class="col-sm-3 col-form-label">Owner:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="StoreOwner" id="Owner" class="form-control" type="text" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="Phone" class="col-sm-3 col-form-label">Phone:</label>
                                            <div class="col-sm-9">
                                                <input asp-for="Phone" id="Phone" class="form-control" type="text" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label for="Description" class="col-form-label">Address: </label>
                                        <div>
                                            <textarea asp-for="Address" id="Address" class="form-control" rows="5"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 m-t-10">
                                        <div class="form-group right">
                                            <div>
                                                <button id="btnSubmitCreateStore" type="button" class="btn btn-primary waves-effect waves-light">
                                                    Submit
                                                </button>
                                                <a asp-controller="Store" asp-action="Index" class="btn btn-secondary waves-effect m-l-5">
                                                    Cancel
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->
<script src="~/js/store.js"></script>

