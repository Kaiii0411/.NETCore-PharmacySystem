@using PharmacySystem.Models.Common;
@model PagedResult<PharmacySystem.Models.ViewModels.MedicineGroupVM>

<div class="page-content-wrapper ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="float-right page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Drixo</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h5 class="page-title">Datatable</h5>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-15">
                    <div class="card-body">
                        <form id="searchForm" asp-controller="MedicineGroup" asp-action="Index" method="get">
                            <div class="form-group row">
                                <div class="col-md-10">
                                    <label class="col-form-label">Medicine Group Name: </label>
                                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>
                                <div class="col-md-2 m-t-33">
                                    <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4 class="mt-0 header-title mb-3 mt-2">Recent Values</h4>
                            </div>
                            <div class="col-sm-6">
                                <button type="button" class="btn btn-primary waves-effect waves-light right m-l-r-10" data-toggle="modal" data-target=".bs-example-modal-center"><i class="fa fa-info-circle"></i> New</button>
                            </div>
                        </div>
                        <table id="datatablemedicinegroup" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Note</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.IdMedicineGroup</td>
                                        <td>@item.MedicineGroupName</td>
                                        <td>@item.Note</td>
                                        <td>
                                            <a href="javascript:;" class="details btn btn-primary waves-effect waves-light"><div><i class="fa fa-eye"></i></div></a>
                                            <a asp-controller="MedicineGroup" asp-action="Delete" asp-route-id="@item.IdMedicineGroup" class="btn btn-outline-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

        <div class="col-sm-12 col-md-3 m-t-30">

            <div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-max">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mt-0">Create New Medicine Group</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col-xl-12">
                                <div class="card m-b-20">
                                    <div class="card-body">
                                        <div class="row">
                                            <form id="medicinegroup-create" class="col-12">
                                                <div class="form-group row">
                                                    <label for="MedicineName" class="col-sm-3 col-form-label">Name:</label>
                                                    <div class="col-sm-9">
                                                        <input id="MedicineGroupName" class="form-control" type="text">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="Note" class="col-sm-3 col-form-label">Note: </label>
                                                    <div class="col-sm-9">
                                                        <textarea id="Note" class="form-control" rows="5"></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-12 m-t-10">
                                                        <div class="form-group right">
                                                            <div>
                                                                <button id="btnSubmitCreateMedicineGroup" type="button" class="btn btn-primary waves-effect waves-light">
                                                                    Submit
                                                                </button>
                                                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                                                    Cancel
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>

    </div>
</div>
<script src="~/js/medicinegroup.js"></script>
